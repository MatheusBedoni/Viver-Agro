<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0dddd"
    tools:context="com.app.viveragro.viveragro2.User">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/semdesc"
        android:visibility="visible"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:background="@color/corbranca"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Conte mais sobre sua propriedade para que nossos clientes tenha mais confiança na hora de comprar um de seus produtos"
            android:id="@+id/textView3"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimarytext"
            android:layout_below="@+id/edt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:text="   CRIAR UMA DESCRIÇÃO   "
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"

            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/button_negativo1"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/ivProfissaoFoto"
            android:layout_width="match_parent"
            android:src="@drawable/frutas"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/comdesc"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView5"
            android:layout_weight="1"
            android:visibility="visible">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:elevation="4dp"
        android:background="@color/corbranca"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Telefone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:layout_below="@+id/edt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/phone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimarytext"
            android:layout_below="@+id/edt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:id = "@+id/vw_divider1"
            android:layout_width="match_parent"
            android:layout_height="0.20dp"
            android:layout_marginTop="20dp"
            android:background="#e0dddd"
            android:layout_below="@+id/ivProfissaoFoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descrição"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:layout_below="@+id/edt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/description"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimarytext"
            android:layout_below="@+id/edt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:id = "@+id/vw_divider2"
            android:layout_width="match_parent"
            android:layout_height="0.20dp"
            android:layout_marginTop="20dp"
            android:background="#e0dddd"
            android:layout_below="@+id/ivProfissaoFoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sitio"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:layout_below="@+id/edt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/sitio"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimarytext"
            android:layout_below="@+id/edt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:id = "@+id/vw_divider3"
            android:layout_width="match_parent"
            android:layout_height="0.20dp"
            android:layout_marginTop="20dp"
            android:background="#e0dddd"
            android:layout_below="@+id/ivProfissaoFoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Endereço"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:layout_below="@+id/edt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/endereco"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimarytext"
            android:layout_below="@+id/edt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:id = "@+id/vw_divider4"
            android:layout_width="match_parent"
            android:layout_height="0.20dp"
            android:layout_marginTop="20dp"
            android:background="#e0dddd"
            android:layout_below="@+id/ivProfissaoFoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tamanho propriedade"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:layout_below="@+id/edt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/propriedade"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimarytext"
            android:layout_below="@+id/edt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:id = "@+id/vw_divider5"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/qtd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:background="#e0dddd" />


    </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:visibility="gone"
        android:src="@drawable/edit"
        android:layout_margin="@dimen/fab_margin"
        />


</android.support.design.widget.CoordinatorLayout>
