<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/corbranca"
    tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/toolbartitle"
            android:textStyle="bold"
            android:textColor="#603813"
            android:layout_marginTop="10dp"
            android:text="Seu titulo"
            android:textSize="20dp" />

    </android.support.v7.widget.Toolbar>


    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="5dp"
        android:background="@color/corbranca"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        >

        <ImageView
            android:id="@+id/ivProfissaoFoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/tvProfissionalProfissao"
            android:layout_alignLeft="@+id/tvProfissionalProfissao"
            android:layout_alignStart="@+id/tvProfissionalProfissao"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/tvProfissionalNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="63dp"
            android:text="Meu nome"
            android:textColor="@color/material_drawer_primary_text"
            android:textSize="17dp" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/shopping_cart_2_"
            android:visibility="gone" />










    </RelativeLayout>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvProfissionalNome"
        android:layout_alignBottom="@+id/tvProfissionalNome"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:text="Meu email"
        android:layout_marginLeft="10dp"
        android:textColor="@color/material_drawer_primary_text"
        android:textSize="17dp" />

    <LinearLayout
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edt_senha"
        android:layout_alignRight="@+id/edt_senha"
        android:background="@color/colorAccent"
        android:layout_below="@+id/edt_senha"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carrinho"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/shopping_cart_add_button"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tvpedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Você ainda não realizou nenhuma compra na Viver Agro"
            android:textColor="@color/material_drawer_primary_text"
            android:textSize="17dp" />


    </LinearLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Você pode mudar a sua conta e começar a ganhar dinheiro na Viver Agro"
        android:textColor="@color/material_drawer_primary_text"
        android:textSize="17dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
        <Button
            android:text="Produtor"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:drawableTop="@drawable/farmerpnng"
            android:id="@+id/produtor"
            android:layout_weight="1"
            android:layout_alignBottom="@+id/txt_vantagem"
            />


    </LinearLayout>


</LinearLayout>
