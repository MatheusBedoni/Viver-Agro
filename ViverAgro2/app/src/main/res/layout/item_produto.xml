<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/profissionais"
    android:visibility="visible"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/publicidade"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:background="@color/corbranca"
    android:elevation="3dp"
    android:layout_toEndOf="@+id/publicidade"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/area"
        android:background="@color/corbranca"
      >

        <ImageView
            android:id="@+id/ivProfissaoFoto"
            android:layout_width="100dp"
            android:src="@drawable/tomatoz"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:textColor="#000"
            android:layout_toRightOf="@+id/ivProfissaoFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id = "@+id/tvProfissionalNome"
            android:paddingRight="16dp"
            android:layout_marginLeft="10dp"
            android:text="Manoel Brabosa"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvProfissionalProfissao"
            android:layout_alignStart="@+id/tvProfissionalProfissao"
            android:layout_below="@+id/tvProfissionalNome"
            android:paddingRight="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Uma descricao do produtor"
            android:textColor="@color/colorPrimarytext"
            android:textSize="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/areas"
        android:layout_gravity="bottom"
        android:gravity="center"

        android:background="@color/corbranca"
        >

        <TextView
            android:id="@+id/tvProfissionalProfissao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvProfissionalNome"
            android:layout_alignStart="@+id/tvProfissionalNome"
            android:layout_below="@+id/tvDescricao"
            android:paddingRight="16dp"
            android:text="4,2"
            android:textSize="15dp" />



        <TextView
            android:id="@+id/tv_votos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView3"
            android:text="4,2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/tvProfissionalNome"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView3"
            android:src="@drawable/edit"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/shopping_cart_add_button"
            android:visibility="visible" />

    </LinearLayout>







    </LinearLayout>

</RelativeLayout>
