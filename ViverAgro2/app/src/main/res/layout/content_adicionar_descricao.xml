<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/corbranca"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/corbranca"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5"
        android:layout_weight="1"
        android:visibility="visible">
        <LinearLayout
            android:layout_below="@+id/tv_brand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/linear">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Digite uma descrição dos seus produtos"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/text"
        android:layout_below="@+id/senha"
        android:layout_alignStart="@+id/textodica"
        android:layout_alignLeft="@+id/textodica" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desc1"
        android:hint="porque as pessoas devem comprar seus produtos?"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Conte-nos em mais detalhes sobre sua propriedade"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textoconfirme"
        android:layout_below="@+id/senha"
        android:layout_alignStart="@+id/textodica"
        android:layout_alignLeft="@+id/textodica" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Você vai realizar as entregas dos produtos?"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/entrega"
                android:layout_below="@+id/senha"
                android:layout_alignStart="@+id/textodica"
                android:layout_alignLeft="@+id/textodica" />
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/radioGroup"
                android:layout_below="@+id/texto1"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/texto1"
                android:layout_alignStart="@+id/texto1">
                <RadioButton android:id="@+id/radio_sim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim"
                    android:layout_marginRight="10dp"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/radio_nao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não"
                    android:onClick="onRadioButtonClicked"
                    android:layout_below="@+id/radioGroup"
                    android:layout_alignLeft="@+id/radioGroup"
                    android:layout_alignStart="@+id/radioGroup"
                    android:checked="false" />



            </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome do seu sitio"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/sitiotexto"
        android:layout_below="@+id/senha"
        android:layout_alignStart="@+id/textodica"
        android:layout_alignLeft="@+id/textodica" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sitio"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telefone pra contato"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/phone"
        android:layout_below="@+id/senha"
        android:layout_alignStart="@+id/textodica"
        android:layout_alignLeft="@+id/textodica" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/tel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
      />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Endereço"
    android:textSize="16dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/enderecotexto"
    android:layout_below="@+id/senha"
    android:layout_alignStart="@+id/textodica"
    android:layout_alignLeft="@+id/textodica" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/endereco"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tamanho da propriedade"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tamanhopropriedade"
        android:layout_below="@+id/senha"
        android:layout_alignStart="@+id/textodica"
        android:layout_alignLeft="@+id/textodica" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/propriedade"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
