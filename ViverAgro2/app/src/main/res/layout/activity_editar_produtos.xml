<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/corbranca"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/corbranca"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <TextView
        android:id="@+id/pri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="O produto que você escolheu vender"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimarytext"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="O produto que você escolheu vender"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimarytext"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/pri2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Você pode adicionar uma foto do seu produto"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimarytext"
        android:textSize="16dp"
        />

    <ImageView
        android:id="@+id/ivProfissaoFoto"
        android:layout_width="60dp"
        android:src="@drawable/photo_camera"
        android:layout_height="60dp"
        android:onClick="addFoto"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/ivProduto"
        android:layout_width="60dp"
        android:visibility="visible"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Digite uma descrição desse produto"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimarytext"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edt_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Digite o preço desse produto por unidade"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textoconfirme"
        android:textColor="@color/colorPrimarytext"
        android:layout_below="@+id/senha"
        android:layout_alignStart="@+id/textodica"
        android:layout_alignLeft="@+id/textodica" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/preco"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />





</LinearLayout>
