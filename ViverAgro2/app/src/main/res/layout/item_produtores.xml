<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/profissionais"
    android:visibility="visible"
    android:background="@color/corbranca"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:elevation="3dp"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/publicidade"
    android:layout_toEndOf="@+id/publicidade"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/area"
        android:background="@color/corbranca"
        >

    <ImageView
        android:id="@+id/ivProfissaoFoto"
        android:layout_width="100dp"
        android:src="@drawable/tomatoz"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:textColor="@color/material_drawer_primary_text"
        android:layout_toRightOf="@+id/ivProfissaoFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id = "@+id/tvProfissionalNome"
        android:paddingRight="16dp"
        android:layout_marginLeft="10dp"
        android:text="Manoel Brabosa"
        android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/tv_votos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="4,2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:visibility="gone" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/areas2"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/corbranca"
        >

        <ImageView
            android:id="@+id/ivLoc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/tvProfissionalNome"
            android:layout_alignStart="@+id/tvProfissionalNome"
            android:layout_below="@+id/tvProfissionalNome"
            android:src="@drawable/facebook_placeholder_for_locate_places_on_maps"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/vw_divider8"
            android:layout_alignLeft="@+id/tventregas"
            android:layout_alignStart="@+id/tventregas"
            android:paddingRight="16dp"
            android:text=" Fazemos entregas"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/areas3"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/corbranca"
        >

        <ImageView
            android:id="@+id/entrega"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:layout_alignBottom="@+id/tvloc"
            android:layout_toLeftOf="@+id/tvloc"
            android:layout_toStartOf="@+id/tvloc"
            android:src="@drawable/logistics_delivery_truck_in_movement"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tventregas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivLoc"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivLoc"
            android:layout_toRightOf="@+id/ivLoc"
            android:paddingRight="6dp"
            android:text=" Centro"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:id = "@+id/vw_divider8"
        android:layout_width="match_parent"
        android:layout_height="0.20dp"
        android:layout_marginTop="20dp"
        android:background="#e0dddd"
        android:layout_below="@+id/ivProfissaoFoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    </LinearLayout>

</RelativeLayout>
